{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": false,
        "useTabs": false, // Cambiado a false para usar espacios
        "tabWidth": 2, // Asegúrate de que el ancho del tab está alineado
        "bracketSpacing": true,
        "trailingComma": "es5",
        "printWidth": 80,
        "arrowParens": "avoid"
      }
    ],
    "semi": ["error", "always"]
  }
}
