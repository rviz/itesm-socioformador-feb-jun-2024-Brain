{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "tabWidth": 2, // Adjust tab width as needed
        "bracketSpacing": true,
        "trailingComma": "all",
        "printWidth": 80,
        "arrowParens": "always"
      }
    ],
    "semi": ["error", "always"]
  }
}
